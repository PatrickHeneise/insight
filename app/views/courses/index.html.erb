<h1>Listing courses</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Short</th>
    <th>Department</th>
  </tr>

<% @courses.each do |course| %>
  <tr>
    <td><%= link_to course.title, course %></td>
    <td><%=h course.short %></td>
    <td><%=h course.department.title %></td>

  </tr>
<% end %>
</table>

<br />

<%= link_to 'New course', new_admin_course_path %>