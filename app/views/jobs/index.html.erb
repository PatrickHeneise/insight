<h1>Listing jobs</h1>

<table>
  <tr>
    <th>Company</th>
    <th>User</th>
    <th>Title</th>
    <th>Description</th>
    <th>Prerequisit</th>
    <th>Period</th>
    <th>Payment</th>
    <th>Timeout</th>
  </tr>

<% @jobs.each do |job| %>
  <tr>
    <td><%=h job.company %></td>
    <td><%=h job.user %></td>
    <td><%=h job.title %></td>
    <td><%=h job.description %></td>
    <td><%=h job.prerequisit %></td>
    <td><%=h job.period %></td>
    <td><%=h job.payment %></td>
    <td><%=h job.timeout %></td>
    <td><%= link_to 'Show', job %></td>
    <td><%= link_to 'Edit', edit_job_path(job) %></td>
    <td><%= link_to 'Destroy', job, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New job', new_job_path %>