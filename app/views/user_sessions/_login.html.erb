<div class="span-10">
	<h1>Login</h1>
	<% form_for UserSession.new, :url => user_session_path do |f| %>
		<%= f.error_messages %>
		<%= f.label :login %><br />
		<%= f.text_field :login %><br />
		<%= f.label :password %><br />
		<%= f.password_field :password %><br />
		<%= f.check_box :remember_me %><%= f.label :remember_me %><br />
		<%= f.submit "Login" %>
	<% end %>
</div>
<div class="span-10 last">
	<%= image_tag "hfu.jpg" %>
</div>