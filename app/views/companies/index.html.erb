<h1>Listing companies</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Industry</th>
  </tr>

<% @companies.each do |company| %>
  <tr>
    <td><%=h company.name %></td>
    <td><%=h company.address.full %></td>
    <td><%=h company.industry %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New company', new_company_path %>